<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBA00B"
    tools:context=".WelcomePage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="213dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="99dp"
        android:fontFamily="sans-serif-medium"
        android:text="BeeReader\n All in one"
        android:textColor="#362703"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/singface"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/signfaceboo"
        app:layout_constraintEnd_toEndOf="@+id/signGoogle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/signGoogle"
        app:layout_constraintTop_toBottomOf="@+id/signGoogle" />

    <ImageView
        android:id="@+id/signGoogle"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:src="@drawable/upgoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/maillog"
        android:drawableTint="#C6B78A"
        android:hint="Email or username"
        android:textColorHint="#F6B50D"
        android:background="@drawable/my_text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/singface"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/singface"
        app:layout_constraintTop_toBottomOf="@+id/singface" />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/my_text"
        android:drawableLeft="@drawable/candado"
        android:drawableTint="#C6B78A"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#F6B50D"
        app:layout_constraintEnd_toEndOf="@+id/singface"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/login"
        style="@style/MyButtonStyle"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:text="LOG IN"
        android:textColor="#362703"
        app:layout_constraintEnd_toEndOf="@+id/editText2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/singin"
        style="@style/MyButtonStyle"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="SIGN IN"
        android:textColor="#362703"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remember me"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="have you forgotten your password?"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:ignore="MissingConstraints,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
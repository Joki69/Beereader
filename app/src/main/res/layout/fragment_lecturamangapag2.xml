<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBA00B"
    tools:context=".lecturamanga2">


    <TextView
        android:id="@+id/mangaNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#362703"
        android:gravity="center"
        android:padding="16dp"
        android:text="Chainsaw Man"
        android:textColor="#DBA00B"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chapterNumberTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chapterNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:background="#362703"
        android:text="Chapter 1"
        android:textSize="14sp"
        android:textColor="#DBA00B"
        app:layout_constraintBottom_toBottomOf="@+id/mangaNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mangaNameTextView"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/previousButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:layout_weight="1"
        android:text="Anterior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chapterNumberTextView"
        app:srcCompat="@drawable/reondaconflechanaranja" />

    <ImageView
        android:id="@+id/nextButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="564dp"
        android:layout_weight="1"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/previousButton"
        app:layout_constraintTop_toBottomOf="@+id/chapterNumberTextView"
        app:layout_constraintVertical_bias="0.833"
        app:srcCompat="@drawable/reondaconflechanaranja" />

    <ImageView
        android:id="@+id/previousButtonflecha2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:layout_weight="1"
        android:text="Anterior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chapterNumberTextView"
        app:srcCompat="@drawable/flechanaranja" />

    <ImageView
        android:id="@+id/flcha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="564dp"
        android:layout_weight="1"
        android:rotationY="-178"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/previousButton"
        app:layout_constraintTop_toBottomOf="@+id/chapterNumberTextView"
        app:layout_constraintVertical_bias="0.62"
        app:srcCompat="@drawable/flechanaranja" />

    <ImageView
        android:id="@+id/closeButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/mangaNameTextView"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flechanaranja" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/mangaframe"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551"
        app:srcCompat="@drawable/dos" />


</androidx.constraintlayout.widget.ConstraintLayout>
